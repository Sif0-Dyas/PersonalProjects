@{
    ViewData["Title"] = "Products";
}
@model ProductsCategories.Models.MyViewModel

<div class="d-flex justify-content-center">
    <h2><a href="/" class="mx-3">Products</a></h2>
    <h1>|</h1>
    <h2><a href="/Categories" class="mx-3">Categories</a></h2>
</div>

<div>
    <h1 class="text-center">@Model.Product.Name</h1>

    <div class="row">
        <div class="col-md-6">
<h4>Categories</h4>
<ul>
    @foreach (var c in Model.Product.AllCategories)
    {
        <li>@c.Category.Name</li>
    }
</ul>
        </div>



        <div class="col-md-6">
            <h4>Add Category</h4>
            <form method="post" action="/Product/AddCategory/@Model.Product.ProductId">
                <div class="form-group">
                    <label for="categories">Available Categories:</label>
                    <select class="form-control" id="categories" name="CategoryId">
                        @foreach (var c in ViewBag.AvailableCategories)
                        {
                            <option value="@c.CategoryId">@c.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Add Category</button>
            </form>
        </div>
    </div>
</div>
