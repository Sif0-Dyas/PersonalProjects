@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-center">
    <h2><a href="/" class="mx-3">Products</a></h2>
    <h1>|</h1>
    <h2><a href="/Categories" class="mx-3">Categories</a></h2>
</div>

@model ProductsCategories.Models.MyViewModel

<div class="row">
    <div class="col-md-6">
        <h2>Add New Product</h2>
        <form asp-action="ProductCreate"asp-controller="Product" method="post" >
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
    <div class="col-md-6">
        <h2>Existing Products</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.AllProducts)
                {
                    <tr>

                        <td><a href="/Product/View/@p.ProductId">@p.Name</a></td>
                        <td>@p.Description</td>
                        <td>@p.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>