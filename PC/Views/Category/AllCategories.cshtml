@{
    ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-center">
    <h2><a href="/" class="mx-3">Products</a></h2>
    <h1>|</h1>
    <h2><a href="/Categories" class="mx-3">Categories</a></h2>
</div>


@model ProductsCategories.Models.MyViewModel


<div class="row">
    <div class="col-md-6">
        <h2>Add New Category</h2>
        <form asp-action="CategoryCreate"  asp-controller="Category" method="post">
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
        
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
    <div class="col-md-6">
        <h2>Existing Categories</h2>
        <table class="table">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.AllCategories != null)
        {
            @foreach (var c in Model.AllCategories)
            {
                <tr>
                    <td> <a href="/Category/View/@c.CategoryId">@c.Name</a></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No categories found.</td>
            </tr>
        }
            </tbody>
        </table>
    </div>
</div>


