@{
    ViewData["Title"] = "Categories";
}
@model ProductsCategories.Models.MyViewModel

<div class="d-flex justify-content-center">
    <h2><a href="/" class="mx-3">Products</a></h2>
    <h1>|</h1>
    <h2><a href="/" class="mx-3">Categories</a></h2>
</div>

<div>
    <h1 class="text-center">@Model.Category.Name</h1>

    <div class="row">
        <div class="col-md-6">
            <h4>Products</h4>
            <ul>
                @foreach (var p in Model.Category.AllProducts)
                {
                    <li>@p.Product.Name</li>
                }
            </ul>
        </div>

        <div class="col-md-6">
            <h4>Add Product</h4>
            <form method="post" action="/Category/AddProduct/@Model.Category.CategoryId">
                <div class="form-group">
                    <label for="products">Available Products:</label>
                    <select class="form-control" id="products" name="ProductId">
                        @foreach (var p in ViewBag.AvailableProducts)
                        {
                            <option value="@p.ProductId">@p.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Add Product</button>
            </form>
        </div>
    </div>
</div>
